{
  "name": "deezar",
  "version": "1.0.0",
  "description": "",
  "main": "node/index.js",
  "bin": {
    "deezar": "dist/index.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf node_modules && rm -rf package-lock.json && rm -f *.log && rm -rf dist && rm -f deezar-linux && rm -f deezar-macos && rm -f deezar-win.exe",
    "build": "npx tsc && cp -r assets dist/",
    "pkg:linux": "pkg dist/index.js --targets node20-linux-x64 --output deezar-linux --no-progress",
    "pkg:macos": "pkg dist/index.js --targets node20-macos-x64 --output deezar-macos --no-progress",
    "pkg:win":   "pkg dist/index.js --targets node20-win-x64 --output deezar-win.exe --no-progress",
    "pkg:all":   "npm run build && npm run pkg:linux && npm run pkg:macos && npm run pkg:win",
    "start": "NODE_OPTIONS=--openssl-legacy-provider ts-node index.ts"
  },
  "author": "Pierric Buchez",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.758.0",
    "@bull-board/api": "^6.10.1",
    "@bull-board/express": "^6.10.1",
    "@yao-pkg/pkg": "^6.5.1",
    "aws-sdk": "^2.1692.0",
    "bull": "^4.16.5",
    "bull-board": "^1.7.2",
    "d-fi": "^2.1.6",
    "d-fi-core": "^1.3.5",
    "decimal.js": "^10.5.0",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "js-sha256": "^0.11.0",
    "meyda": "^5.6.3",
    "music-tempo": "^1.0.3",
    "mysql2": "^3.12.0",
    "nodemailer": "^6.10.0",
    "sqlstring": "^2.3.3",
    "uuid": "^11.0.5",
    "web-audio-api": "^0.2.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@types/express": "^5.0.0",
    "@types/node": "^24.0.0",
    "@types/nodemailer": "^6.4.17",
    "@types/sqlstring": "^2.3.2",
    "babel-plugin-module-resolver": "^5.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
